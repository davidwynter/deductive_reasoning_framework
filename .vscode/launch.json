{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python:Streamlit Deductive",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${file}",
                "--server.port",
                "3003"
            ]
        },
        {
            "name": "Run Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/deductive_reasoning_framework/app/deductive_ai/app.py",
            "console": "integratedTerminal",
            "args": [
                "run"
            ],
            "env": {
                "STREAMLIT_SERVER_PORT": "8501"
            }
        }
    ]
}